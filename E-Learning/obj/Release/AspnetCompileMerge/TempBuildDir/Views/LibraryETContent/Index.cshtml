
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using E_Learning.Models
@model PagedList.IPagedList<ManageETContentValidation>
@using PagedList.Mvc
<link href="~/Content/assets/css/PagedList.css" rel="stylesheet" />

@if (TempData["msgSuccess"] != null)
{
    @Html.Raw(TempData["msgSuccess"])
}
@if (TempData["msgError"] != null)
{
    @Html.Raw(TempData["msgError"])
}

<div class="app-main__outer">

    <div class="app-main__inner">

        <div class="app-page-title">
            <div class="page-title-wrapper">
                <div class="page-title-heading">
                    <div class="page-title-icon">
                        <i class="pe-7s-display2 icon-gradient bg-grow-early">
                        </i>
                    </div>
                    <div>
                        Thư Viện Nội Dung Đào Tạo
                        <div class="page-title-subheading">
                        </div>
                    </div>
                </div>

            </div>
        </div>

        <div class="tab-content">
            <div class="row">

                <div class="col-lg-12">
                    <div class="main-card mb-3 card">
                        <div class="card-header">
                            <i class="header-icon lnr-gift icon-gradient bg-grow-early"> </i>Danh sách Nội dung

                        </div>
                        
                        <div class="card-body">
                            
                            <div class="tab-content" style="margin-top: 30px;">

                                <div class="row" style="padding: 0 10%;">
                                    @foreach (var item in Model)
                                    {

                                        <div class="col-md-6 col-xl-3">
                                            <div class="card mb-3">

                                                <div class="text-white">
                                                    <img src="@item.ImageND" style="width:100%">
                                                </div>

                                                <div class="widget-content">
                                                    <div class="content">
                                                        <div class="widget-subheading">@item.NoiDung</div>
                                                    </div>
                                                    <div class="widget-content-wrapper" style="padding: .5rem 0 0;">

                                                        <div class="widget-content-left"><strong>Mã Nội Dung : </strong></div>
                                                        <div class="widget-content-right">@item.MaND</div>

                                                    </div>
                                                    <div class="widget-content-wrapper" style="padding: .5rem 0 0;">

                                                        <div class="widget-content-left"><strong>BPL Nhu Cầu:</strong></div>
                                                        <div class="widget-content-right">@item.BPLNC</div>

                                                    </div>
                                                    <div class="widget-content-wrapper" style="padding: .5rem 0 0;">

                                                        <div class="widget-content-left"><strong>Lĩnh vực : </strong></div>
                                                        <div class="widget-content-right">@item.LinhVuc</div>

                                                    </div>
                                                    <div class="widget-content-wrapper" style="padding: .5rem 0;">

                                                        <div class="widget-content-right">
                                                            <a id="@item.IDND" href="@Url.Action("Index" , "LibraryClass" , new { id = @item.IDND })">
                                                                <span class="btn-transition btn btn-outline-success">Tiếp theo</span>
                                                            </a>
                                                        </div>

                                                    </div>
                                                </div>

                                            </div>
                                        </div>
                                    }
                                    </div>

                            </div>
                        </div>
                         

                        <div class="d-block text-right card-footer">

                        </div>

                    </div>
                </div>

            </div>
        </div>
    </div>

    <div class="app-wrapper-footer">
        <div class="app-footer">
            <div class="app-footer__inner">

            </div>
        </div>
    </div>

</div>

<script type="text/javascript">


</script>
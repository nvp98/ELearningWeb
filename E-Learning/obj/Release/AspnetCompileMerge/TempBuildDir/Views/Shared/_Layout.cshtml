<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta http-equiv="Content-Language" content="en">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>E-Learning HPDQ</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no, shrink-to-fit=no" />
    <meta name="description" content="This is an example dashboard created using build-in elements and components.">
    <meta name="msapplication-tap-highlight" content="no">
    <link href="~/Content/main.css" rel="stylesheet" />
    <script src="~/Content/assets/plotly-latest.min.js"></script>
    <script src="~/Content/jquery-3.0.0.min.js"></script>
    <script src="~/Content/bootstrap.min.js"></script>
    <link href="~/Content/assets/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <script src="//cdn.jwplayer.com/libraries/bNWVoTb1.js"></script>

    @*<script src="~/Content/JW8.js"></script>
        <script type="text/javascript" charset="utf-8" async="" src="//ssl.p.jwpcdn.com/player/v/8.2.0/jwplayer.core.controls.html5.js"></script>
        <script>jwplayer.key = "F1U56v9F9VYRtROmtMj5qrBBF9G+XntIlkVwPw==";</script>*@




</head>
<body>
    @{
        if (Session["S_TK"] == null)
        {
            Response.Redirect("~/Login");
        }
    }
    <div class="app-container app-theme-white body-tabs-shadow fixed-sidebar fixed-header">
        <div class="app-header header-shadow">
            <div class="app-header__logo">
                <div class="logo-src"></div>
                <div class="header__pane ml-auto">
                    <div>
                        <button type="button" class="hamburger close-sidebar-btn hamburger--elastic" data-class="closed-sidebar">
                            <span class="hamburger-box">
                                <span class="hamburger-inner"></span>
                            </span>
                        </button>
                    </div>
                </div>
            </div>
            <div class="app-header__mobile-menu">
                <div>
                    <button type="button" class="hamburger hamburger--elastic mobile-toggle-nav">
                        <span class="hamburger-box">
                            <span class="hamburger-inner"></span>
                        </span>
                    </button>
                </div>
            </div>
            <div class="app-header__menu">
                <span>
                    <button type="button" class="btn-icon btn-icon-only btn btn-primary btn-sm mobile-toggle-header-nav">
                        <span class="btn-icon-wrapper">
                            <i class="fa fa-ellipsis-v fa-w-6"></i>
                        </span>
                    </button>
                </span>
            </div>
            <div class="app-header__content">
                <div class="app-header-left">
                    <div class="search-wrapper">
                        <div class="input-holder">
                            <input type="text" class="search-input" placeholder="Type to search">
                            <button class="search-icon"><span></span></button>
                        </div>
                        <button class="close"></button>
                    </div>

                </div>
                <div class="app-header-right">
                    <div class="header-btn-lg pr-0">
                        <div class="widget-content p-0">
                            <div class="widget-content-wrapper">
                                <div class="widget-content-left">
                                    <div class="btn-group">
                                        <a data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" class="p-0 btn">
                                            <img width="42" class="rounded-circle" src="~/Content/assets/images/avatars/2.jpg" alt="">
                                            <i class="fa fa-angle-down ml-2 opacity-8"></i>
                                        </a>
                                        <div tabindex="-1" role="menu" aria-hidden="true" class="dropdown-menu dropdown-menu-right">
                                            <a class="dropdown-item" href="@Url.Action("Logout","Login")">Đăng xuất</a>
                                            <a class="dropdown-item" href="@Url.Action("ChangePassword","Login")">Đổi mật khẩu</a>
                                            @*<button type="button" tabindex="0" class="dropdown-item">Đăng xuất</button>*@
                                            @*<button type="button" tabindex="0" class="dropdown-item">Settings</button>*@

                                        </div>
                                    </div>
                                </div>
                                <div class="widget-content-left  ml-3 header-user-info">
                                    <div class="widget-heading">
                                        @Session["S_Hoten"]
                                    </div>
                                    <div class="widget-subheading">
                                        @*PNS*@
                                    </div>
                                </div>
                                <div class="widget-content-right header-user-info ml-3">

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="app-main">
            <div class="app-sidebar sidebar-shadow">
                <div class="app-header__logo">
                    <div class="logo-src"></div>
                    <div class="header__pane ml-auto">
                        <div>
                            <button type="button" class="hamburger close-sidebar-btn hamburger--elastic" data-class="closed-sidebar">
                                <span class="hamburger-box">
                                    <span class="hamburger-inner"></span>
                                </span>
                            </button>
                        </div>
                    </div>
                </div>
                <div class="app-header__mobile-menu">
                    <div>
                        <button type="button" class="hamburger hamburger--elastic mobile-toggle-nav">
                            <span class="hamburger-box">
                                <span class="hamburger-inner"></span>
                            </span>
                        </button>
                    </div>
                </div>
                <div class="app-header__menu">
                    <span>
                        <button type="button" class="btn-icon btn-icon-only btn btn-primary btn-sm mobile-toggle-header-nav">
                            <span class="btn-icon-wrapper">
                                <i class="fa fa-ellipsis-v fa-w-6"></i>
                            </span>
                        </button>
                    </span>
                </div>
                <div class="scrollbar-sidebar">
                    <div class="app-sidebar__inner">
                        <ul class="vertical-nav-menu">
                            <li class="app-sidebar__heading">Tổng quan</li>
                            @*<li>
                                <a href="@Url.Action("Index","Home")" class="mm-active">
                                    <i class="metismenu-icon pe-7s-home"></i>
                                    Trang chủ
                                </a>
                            </li>*@
                            <li>
                                <a href="@Url.Action("Index","EClassroom")">
                                    <i class="metismenu-icon pe-7s-display1"></i>
                                    Lớp học của bạn
                                </a>
                            </li>
                            @if (Session["S_TK"] != null)
                            {
                                E_Learning.Models.NhanVien User = ((E_Learning.Models.NhanVien)Session["S_TK"]);
                                if (User.IDQuyen == 1 || User.IDQuyen == 2 || User.IDQuyen == 3)
                                {
                                    <li class="app-sidebar__heading">Quản lý Học Vụ</li>
                                    <li>
                                        <a href="@Url.Action("Index","ManageETContent")">
                                            <i class="metismenu-icon pe-7s-portfolio"></i>
                                            Quản lý NDĐT
                                        </a>
                                    </li>
                                    <li>
                                        <a href="@Url.Action("Index","ManageClass")">
                                            <i class="metismenu-icon pe-7s-id"></i>
                                            Quản lý Lớp học
                                        </a>
                                    </li>
                                    <li>
                                        <a href="@Url.Action("Index","LibraryETContent")">
                                            <i class="metismenu-icon pe-7s-display2"></i>
                                            Thư viện NDĐT
                                        </a>
                                    </li>
                                }
                            }






                            <li class="app-sidebar__heading">Thư viện</li>
                            <li>
                                <a href="#">
                                    <i class="metismenu-icon pe-7s-notebook">
                                    </i>Tài liệu
                                </a>
                            </li>


                        </ul>
                    </div>
                </div>
            </div>

            @RenderBody()

        </div>
    </div>

    <script type="text/javascript" src="~/Content/assets/scripts/main.js"></script>
</body>
</html>

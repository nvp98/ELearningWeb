@model E_Learning.Models.ManageTestExamValidation

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.IDDeThi)
    <div class="modal-dialog" id="form">
        <div class="modal-content">
            <div class="modal-header">
                <h5 id="ModalTitle"></h5>
                <a href="#" class="close" data-dismiss="modal">&times;</a>
            </div>
            <div class="modal-body">


                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <fieldset id="SubmitForm">
                    <div class="row">

                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="small mb-1">Mã Đề Thi</label>

                                @Html.TextBox("MaDe", null, new { @class = "form-control", @readonly = "true" })

                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="small mb-1">Tổng Số Câu</label>
                                @Html.EditorFor(model => model.TongSoCau, new { htmlAttributes = new { @class = "form-control", placeholder = "Tổng Số Câu", @id = "TongSoCau" } })
                                @Html.ValidationMessageFor(model => model.TongSoCau, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="small mb-1">Tên Đề Thi</label>
                                @Html.EditorFor(model => model.TenDe, new { htmlAttributes = new { @class = "form-control", placeholder = "Tên Đề Thi", @id = "TenDe" } })
                                @Html.ValidationMessageFor(model => model.TenDe, "", new { @class = "text-danger" })
                            </div>
                        </div>


                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="small mb-1">Nội dung đào tạo</label>
                                @Html.DropDownListFor(model => model.IDND, ViewBag.BDList as SelectList, new { @class = "form-control", @id = "IDND" })
                            </div>
                        </div>




                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="small mb-1">Điểm Chuẩn </label>
                                @Html.EditorFor(model => model.DiemChuan, new { htmlAttributes = new { @class = "form-control", placeholder = "Điểm Chuẩn", @id = "DiemChuan", @readonly = "true" } })
                                @Html.ValidationMessageFor(model => model.DiemChuan, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="small mb-1">Thời Gian Làm Bài</label>
                                @Html.EditorFor(model => model.ThoiGianLamBai, new { htmlAttributes = new { @class = "form-control", placeholder = "Thời gian Làm Bài", @id = "ThoiGianLamBai" } })
                                @Html.ValidationMessageFor(model => model.ThoiGianLamBai, "", new { @class = "text-danger" })
                            </div>
                        </div>



                        @*<div class="col-md-12">
               <div class="form-group">
                   <label class="small mb-1" for="inputLastName">Tải lên Danh sách Câu hỏi</label>
                   <input type="file" id="FileUpload" name="FileUpload" class="form-control" onchange="checkfile(this);" />
               </div>
        </div>*@

                    </div>

                    <div class="btn-margin-top text-center">
                        <input type="submit" value="Xác nhận" id="btnSubmit" class="btn btn-success button_submit" />

                    </div>

                </fieldset>

            </div>
        </div>
    </div>
}


<script>



    $("#NDID").chosen({
        width: "100%"
    });


</script>


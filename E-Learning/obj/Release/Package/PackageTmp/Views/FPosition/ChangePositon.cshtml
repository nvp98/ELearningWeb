                                            {
                                                if (item1.Value == item.IDPB.ToString())
                                                {
                                                    <option value='@item1.Value' selected>@item1.Text</option>
                                                }
                                                else
                                                {
                                                    <option value='@item1.Value'>@item1.Text</option>
                                                }
                                            }
                                        </select>
                            
                                    </td>
                                    <td>
                                        <select class="form-control marginTB5 SelectK" name="IDK_@item.IDVT" id="IDK_@item.IDVT">
                                            <option value='null'>--Chọn Khối--</option>
                                            @foreach (var item1 in ViewBag.IDKhoi)
                                            {
                                                if (item1.Value == item.IDKhoi.ToString())
                                                {
                                                    <option value='@item1.Value' selected>@item1.Text</option>
                                                }
                                                else
                                                {
                                                    <option value='@item1.Value'>@item1.Text</option>

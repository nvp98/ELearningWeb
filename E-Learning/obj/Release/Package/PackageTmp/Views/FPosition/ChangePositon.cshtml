<div class="app-main__outer">
    <div class="app-main__inner" style="padding: 30px 15px">

        <div class="app-page-title d-none" style="padding-bottom:0">
            <div class="page-title-wrapper">
                <div class="page-title-heading">
                    <div class="page-title-icon">
                        <i class="pe-7s-id icon-gradient bg-grow-early">
                        </i>
                    </div>
                    <div>
                        Danh Sách Vị Trí Khung Năng Lực
                        <div class="page-title-subheading">
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-2">
                <input type="text" id="txtsearch" name="" placeholder="Nhập mã vị trí" class="form-control position-relative" style="top:-5px" value="@ViewBag.search">
            </div>
           
        </div>
        <div class="card mb-4">
            <div class="card-header" style="padding-top:20px">

                <div class="col-md-12">
                    <div class="row">
                        <div class="col-md-2">
                            <div class="row">
                                <label class=" mb-1">Bộ phận</label>
                                @Html.DropDownList("IDPB", null, "--Bộ Phận--", new { id = "IDPB", @class = "form-control marginTB5", })
                            </div>

                        </div>
                        <div class="col-md-2">
                            <div class="row m-0">
                                <label class=" mb-1">Khối</label>
                                @Html.DropDownList("IDKhoi", null, "--Khối--", new { id = "IDKhoi", @class = "form-control marginTB5", })
                            </div>

                        </div>
                        <div class="col-md-2">
                            <div class="row m-0">
                                <label class=" mb-1">Phân Xưởng</label>
                                <select class="form-control marginTB5" name="IDPX" id="IDPX">
                                </select>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="row m-0">
                                <label class=" mb-1">Nhóm</label>
                                <select class="form-control marginTB5" name="IDNhom" id="IDNhom">
                                </select>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="row m-0">
                                <label class=" mb-1">Tổ</label>
                                <select class="form-control marginTB5" name="IDTo" id="IDTo">
                                </select>
                            </div>

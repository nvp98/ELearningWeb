                                            {
                                                if (item1.Value == item.IDPX.ToString())
                                                {
                                                    <option value='@item1.Value' selected>@item1.Text</option>
                                                }
                                                else
                                                {
                                                    <option value='@item1.Value'>@item1.Text</option>
                                                }
                                            }
                                        </select>
                                    </td>
                                    <td>
                                        <select class="form-control marginTB5 SelectNhom" name="IDNhom_@item.IDVT" id="IDNhom_@item.IDVT">
                                            <option value='null'>--Chọn Nhóm--</option>
                                            @foreach (var item1 in ViewBag.IDNhom)
                                            {
                                                if (item1.Value == item.IDNhom.ToString())
                                                {
                                                    <option value='@item1.Value' selected>@item1.Text</option>
                                                }
                                                else
                                                {
                                                    <option value='@item1.Value'>@item1.Text</option>
                                                }
                                            }
                                        </select>
                                    </td>
                                    <td>
                                        <select class="form-control marginTB5 SelectTo" name="IDTo_@item.IDVT" id="IDTo_@item.IDVT">
                                            <option value='null'>--Chọn Tổ--</option>
                                            @foreach (var item1 in ViewBag.IDTo)
                                            {
                                                if (item1.Value == item.IDTo.ToString())
                                                {
                                                    <option value='@item1.Value' selected>@item1.Text</option>
                                                }
                                                else
                                                {
                                                    <option value='@item1.Value'>@item1.Text</option>
                                                }
                                            }
                                        </select>
                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table>
                        <div class="pager">
                            @Html.PagedListPager(Model, page => Url.Action("ChangePositon", "FPosition", new { page, IDPB = Request.QueryString["IDPB"], IDPX = Request.QueryString["IDPX"], IDNhom = Request.QueryString["IDNhom"], IDTo = Request.QueryString["IDTo"], IDKhoi = Request.QueryString["IDKhoi"] }))
                            <span class="pageoff">Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount</span>
                        </div>
                    </div>
                </div>
                <span class="m-l-auto">
                    <input class="btn btn-success m-l-auto mr-1" type="submit" value="Lưu thay đổi" />
                </span>
            }
        </div>



    </div>


    <div class="app-wrapper-footer d-none">
        <div class="app-footer">
            <div class="app-footer__inner">
            </div>
        </div>
    </div>


</div>


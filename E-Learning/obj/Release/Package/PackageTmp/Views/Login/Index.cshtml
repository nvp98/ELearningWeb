
@{
    Layout = null;
}
@model E_Learning.Models.LoginValidation
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Đăng nhập</title>
    <link href="~/Content/main.css" rel="stylesheet" />
    <script src="~/Content/assets/plotly-latest.min.js"></script>
    <script src="~/Content/jquery-3.0.0.min.js"></script>
    <script src="~/Content/bootstrap.min.js"></script>
</head>
@if (TempData["msglg"] != null)
{
    @Html.Raw(TempData["msglg"])
}
<body class="bg-login">

    <div class="container" style="height:100%">
        <div class="main-content">
            <div class="content-centered">

                @*Form Login*@

                <div class="card shadow-lg border-0 rounded-lg" style="">
                    <div class="card-header">
                        <img src="~/Content/assets/images/logo-inverse.png" style="width:100%; height:auto; max-width:230px; margin: 0 auto;" />
                    </div>
                    <div class="card-body">

                        <p class="text-center font-weight-light">Phần mềm đào tạo trực tuyến E-Learning</p>

                        @using (Html.BeginForm("LoginUser", "Login", new { id = "myForm" }))
                        {
                            <div class="form-group">
                                @*<label class="small mb-1" for="inputEmailAddress">Tài khoản</label>*@
                                @Html.TextBoxFor(m => m.MaNV, new { @class = "form-control", @placeholder = "Mã Nhân Viên" })
                                @Html.ValidationMessageFor(m => m.MaNV, "", new { @class = "text-danger" })
                                <div id="show_error_user"></div>
                            </div>
                            <div class="form-group">
                                @*<label class="small mb-1" for="inputPassword">Mật khẩu</label>*@
                                @Html.PasswordFor(m => m.MatKhau, new { @class = "form-control", @placeholder = "Mật khẩu" })
                                @Html.ValidationMessageFor(m => m.MatKhau, "", new { @class = "text-danger" })
                                <div id="show_error_pass"></div>
                            </div>


                            <div class="form-group">
                                <button id="LoginUser" type="submit" class="form-control btn btn-primary submit px-3"><strong>Đăng Nhập</strong></button>
                            </div>

                            <div class="form-group">
                                <div class="custom-control custom-checkbox">
                                    <input class="custom-control-input" id="rememberPasswordCheck" type="checkbox" />
                                    <label class="custom-control-label" for="rememberPasswordCheck">Nhớ tài khoản</label>
                                </div>
                            </div>
                            <div class="form-group text-center">
                                <a class="app-Android" target="_blank" href="https://apps.apple.com/us/app/e-learning-hpdq/id6472882908"><img alt="" style="max-height:34px" title="Tải app IOS" src="~/Content/assets/images/AppStore.png"></a>
                                <a class="app-Android" target="_blank" href="https://play.google.com/store/apps/details?id=com.mysticacademy.app"><img alt="" style="max-height:34px" title="Tải app IOS" src="~/Content/assets/images/GooglePlay.png"></a>
                            </div>
                        }

                    </div>

                </div>

                @*End Form Login*@

            </div>
        </div>
        <footer class="">
            <div class="">
                <div class="">
                    <div class="text-c">Copyright &copy; @DateTime.Now.Year Ban Công nghệ thông tin.<br /> Công ty CP Thép Hòa Phát Dung Quất </div>
                </div>
            </div>
        </footer>

    </div>


    @if (TempData["msg"] != null)
    {
        Html.Raw(TempData["msg"]);
    }
    @{
        Html.RenderAction("Details", "Notification");
    }
</body>
</html>

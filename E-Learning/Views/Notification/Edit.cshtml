@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="modal-dialog" id="formE" >
        <div class="modal-content" style="width:800px">
            <div class="modal-header">
                <h5 id="ModalTitle"></h5>
                <a href="#" class="close" data-dismiss="modal">&times;</a>
            </div>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.ID)
            <div class="modal-body">

                <fieldset id="SubmitForm">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="small mb-1">Nội Dung Thông báo</label>
                                @Html.TextAreaFor(model => model.NoiDungTB, new { @class = "form-control myTextarea", @rows = "6", placeholder = "Nội Dung Thông báo", @id = "NoiDungTB" })
                                @Html.ValidationMessageFor(model => model.NoiDungTB, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group col-md-12">
                            <label class="small mb-1">Tình trạng</label>
                            @Html.DropDownListFor(m => m.TinhTrang, (SelectList)ViewBag.SelectList, "-- Select --", new { id = "TinhTrang", @class = "form-control marginTB5", @style = "width:100%", })
                        </div>

                    </div>
                    &nbsp;
                    <div class="btn-margin-top text-center">
                        <input type="submit" value="Xác nhận" class="btn btn-success button_submit" />
                        <input type="reset" value="Hủy" class="btn btn-danger button_cancel" data-dismiss="modal" />
                    </div>
                </fieldset>

            </div>


        </div>
    </div>
}
<style>
    .button_submit {
        float: right;
        margin-bottom: 15px;
    }

    .button_cancel {
        float: right;
        margin-right: 15px
    }

    .margin-checkbox {
        margin-right: 30px;
    }
</style>


<script>
    $("#formE #IDND").chosen({

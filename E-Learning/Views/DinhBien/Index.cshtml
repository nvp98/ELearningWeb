                                        <td class="text-center font-weight-bold">@item.thoigianBoNhiem.ToString("dd-MM-yyyy")</td>
                                    }
                                    <td class="text-center font-weight-bold">@item.NSVTKhac</td>
                                    <td>@item.ghichu</td>
                                    @if (item.NgayTao == null || item.NgayTao == default(DateTime))
                                    {
                                        <td class="text-center"></td>
                                    }
                                    else
                                    {
                                        <td class="text-center font-weight-bold">@item.NgayTao.ToString("dd-MM-yyyy")</td>
                                    }
                                    @if ((ViewBag.QUYENCN as List<String>).Contains(CONSTKEY.DEL) || (ViewBag.QUYENCN as List<String>).Contains(CONSTKEY.EDIT))
                                    {
                                        <td class="text-center">
                                            <a id="btn-edit_@item.IDVT" title="Sửa" class="fa fa-edit icon_action "></a>
                                            <div class=" modal fade" id="myModaleK_@item.IDVT" role="dialog" data-url='@Url.Action("Edit", "DinhBien", new { id = item.IDVT })'></div>
                                            <script type="text/javascript">
                                                                    $("#btn-edit_@item.IDVT").click(function () {
                                                                        var url = $('#myModaleK_@item.IDVT').data('url');
                                                                                $.get(url, function (data) {
                                                                                    $("#myModaleK_@item.IDVT").html(data);
                                                                                    $("#ModalTitle").html("Cập nhật Vị trí");
                                                                                    $("#myModaleK_@item.IDVT").modal('show');
                                                                                });
                                                                            });
                                            </script>
                                            @if (item.IDDB != null)
                                            {
                                                <a class="fa fa-refresh icon_action" title="Xóa dữ liệu nhập?" href="@Url.Action("Delete", "DinhBien", new { id = item.IDDB, IDPB = Request.QueryString["IDPB"] })"
                                                   onclick="return confirm('Bạn muốn xóa : @item.MaViTri')">
                                                </a>
                                            }

                                        </td>
                                       
                                    }

                                </tr>

                            }

                        </tbody>
                    </table>
                    <div class="pager">
                        @Html.PagedListPager(Model, page => Url.Action("Index", "DinhBien", new { page, IDPB = Request.QueryString["IDPB"], IDPX = Request.QueryString["IDPX"], IDNhom = Request.QueryString["IDNhom"], IDTo = Request.QueryString["IDTo"], IDKhoi = Request.QueryString["IDKhoi"] }))
                        <span class="pageoff">Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount</span>
                    </div>
                </div>
            </div>
        </div>



    </div>


    <div class="app-wrapper-footer d-none">
        <div class="app-footer">
            <div class="app-footer__inner">

        var idpb = $(this).val();
        var idpx = $("#IDPX").val() || params.get('IDPX');
        var idk = $("#IDKhoi").val();
        $.get("/FGroup/GetPX", { IDPB: idpb, IDKhoi: idk }, function (data) {
            if (data[0] != null) {
                $("#IDPX").empty();
                $("#IDPX").append("<option value ='" + null + "'>" + "--Chọn Phân Xưởng--" + "</option>")

            const params = new URLSearchParams(window.location.search);
            var idpx = $("#IDPX").val() || params.get('IDPX');
            var idpb = $("#IDPB").val();

            $.get("/FGroup/GetNhom", { IDPX: idpx, IDPB: idpb }, function (data1) {
                if (data1[0] != null) {
                    $("#IDNhom").empty();

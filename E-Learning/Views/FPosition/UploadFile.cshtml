@model E_Learning.Models.ViTriKNLValidation
@using E_Learning.Models
@*<script src="~/Content/assets/Chonse/chosen.jquery.js"></script>
    <link href="~/Content/assets/Chonse/chosen.css" rel="stylesheet" />*@
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm("UploadFile", "FPosition", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.IDVT)
    @Html.HiddenFor(model => model.IDPB)
    @Html.HiddenFor(model => model.IDPX)
    @Html.HiddenFor(model => model.IDNhom)
    @Html.HiddenFor(model => model.IDTo)
    @Html.HiddenFor(model => model.IDKhoi)
    <div class="modal-dialog" id="form">
        <div class="modal-content">
            <div class="modal-header">
                <h5 id="ModalTitle"></h5>
                <a href="#" class="close" data-dismiss="modal">&times;</a>
            </div>
            <div class="modal-body">
                <fieldset id="SubmitForm">
                    <div class="row text-left">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="small mb-1 font-weight-bold">Tên Vị trí</label>
                                @Html.EditorFor(model => model.TenViTri, new { htmlAttributes = new { @class = "form-control", placeholder = "", @id = "TenViTri", @readonly = "true" } })
                                @*@Html.ValidationMessageFor(model => model.V_BKS, "", new { @class = "text-danger" })*@
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="small mb-1 font-weight-bold">Mã Vị trí</label>
                                @Html.EditorFor(model => model.MaViTri, new { htmlAttributes = new { @class = "form-control", placeholder = "", @id = "MaViTri", @readonly = "true" } })
                                @*@Html.ValidationMessageFor(model => model.V_BKS, "", new { @class = "text-danger" })*@
                            </div>
                        </div>

                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="small mb-1 font-weight-bold">File mô tả công việc</label>
                                @Html.EditorFor(model => model.FilePath, new { htmlAttributes = new { @class = "form-control", placeholder = "", @id = "FilePath", @readonly = "true" } })
                                <div class="col-md-10">
                                    <input type="file" name="FileUpload" />

                                </div>
                            </div>
                        </div>

                    </div>
                   
                    <div class="btn-margin-top text-center">
                        @if (MyAuthentication.IDQuyen != 9 && MyAuthentication.IDQuyen != 10)
                        {
                            <input type="submit" value="Xác nhận" class="btn btn-success button_submit" />
                            <input type="reset" value="Hủy" class="btn btn-danger button_cancel" data-dismiss="modal" />
                        }

                    </div>

                </fieldset>

            </div>
        </div>
    </div>



}
<script type="text/javascript">

</script>




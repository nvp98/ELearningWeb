
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using E_Learning.Models
@model PagedList.IPagedList<ManageTestExamValidation>
@using PagedList.Mvc

<link href="~/Content/assets/css/PagedList.css" rel="stylesheet" />
<script src="~/Content/assets/Chonse/chosen.jquery.js"></script>
<link href="~/Content/assets/Chonse/chosen.css" rel="stylesheet" />

@if (TempData["msgSuccess"] != null)
{
    @Html.Raw(TempData["msgSuccess"])
}
@if (TempData["msgError"] != null)
{
    @Html.Raw(TempData["msgError"])
}



<div class="app-main__outer">
    <div class="app-main__inner">

        <div class="app-page-title">
            <div class="page-title-wrapper">
                <div class="page-title-heading">
                    <div class="page-title-icon">
                        <i class="pe-7s-portfolio icon-gradient bg-grow-early">
                        </i>
                    </div>
                    <div>
                        Quản lý đề thi
                        <div class="page-title-subheading">
                        </div>
                    </div>
                </div>

            </div>
        </div>

        <div class="tab-content">
            <div class="row">
                <div class="card col-lg-12">
                    <div class="card-header">
                        @*@if (E_Learning.Models.MyAuthentication.IDQuyen == 1)
        {*@
                        <div class="col-md-8 col-lg-10">
                            <div class="row">
                                <div class="col-md-4">
                                    <input type="text" id="txtsearch" name="" placeholder="Tìm kiếm" class="form-control" value="@ViewBag.search">
                                </div>

                                <div class="col-md-4">
                                    @Html.DropDownList("IDND", null, "--Nội dung--", new { id = "IDND", @class = "form-control marginTB5", @style = "width:100%", })
                                </div>

                                <div class="col-md-2">
                                    <button class="btn btn-primary" id="btn-search"><i class="fa fa-search"></i> Tìm kiếm</button>
                                </div>
                            </div>
                        </div>
                        @*//}*@

                        @if ((ViewBag.QUYENCN as List<String>).Contains(CONSTKEY.ADD))
                        {
                            @*<span class="col-md-2">
                                <button type="button" id="btn-add" class="btn btn-primary m-l-auto"><i class="fa fa-plus">&nbsp;</i>&nbsp;Thêm mới </button>
                                <span class="modal fade" id="myModal" role="dialog" data-url='@Url.Action("Create", "ManageTestExam")'></span>

                            </span>*@
                        }
                        </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered table-hover" id="table" width="100%" cellpadding="0">
                                <thead class="thead-light">
                                    <tr>
                                        <th width="30px" class="text-center">STT</th>
                                        <th>Nội dung</th>
                                        <th class="text-center">Mã đề thi</th>
                                        <th class="">Tên đề thi</th>
                                        <th class="text-center">Tổng số câu</th>
                                        <th class="text-center">Điểm chuẩn</th>
                                        <th class="text-center">Thời gian làm bài</th>

                                        <th width="120px" class="text-center">Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        int pageno = (int)Model.PageNumber;
                                        int itemperpage = (int)Model.PageSize;
                                        int RowNo = ((pageno - 1) * itemperpage) + 1;
                                    }
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td class="text-center">@RowNo@{RowNo++;}</td>
                                             <td>@item.TenND</td>
                                            <td class="text-center">@item.MaDe</td>
                                            <td class="">@item.TenDe</td>
                                            <td class="text-center">@item.TongSoCau</td>
                                            <td class="text-center">@item.DiemChuan/10</td>
                                            <td class="text-center">@item.ThoiGianLamBai phút</td>
                                           
       
                                            <td class="text-center">

                                                <a title="DS Câu Hỏi" class="fa fa-list-alt" id="@item.IDDeThi" href="@Url.Action("Question" , "ManageTestExam" , new { id = @item.IDDeThi })"></a>

                                                @if ((ViewBag.QUYENCN as List<String>).Contains(CONSTKEY.EDIT))
                                                {

                                                    <a id="btn-edit_@item.IDDeThi" title="Sửa" class="fa fa-edit icon_action"></a>
                                                    <div class="modal fade" id="myModale_@item.IDDeThi" role="dialog" data-url='@Url.Action("Edit", "ManageTestExam", new { id = item.IDDeThi })'></div>
                                                    <script type="text/javascript">
                                                    $("#btn-edit_@item.IDDeThi").click(function () {
                                                        var url = $('#myModale_@item.IDDeThi').data('url');
                                                        $.get(url, function (data) {
                                                            $("#myModal").html(data);
                                                            $("#ModalTitle").html("Cập nhật Đề Thi");
                                                            $("#myModal").modal('show');
                                                        });
                                                    });
                                                    </script>
                                                }
                                                @if ((ViewBag.QUYENCN as List<String>).Contains(CONSTKEY.DEL))
                                                {
                                                    <a class="fa fa-trash icon_action" title="Xóa" href="@Url.Action("Delete", "ManageTestExam", new { id = item.IDDeThi })"
                                                       onclick="return confirm('Bạn muốn xóa Đề Thi: @item.TenDe')"></a>
                                                }
                                                </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <div class="pager">
                                @Html.PagedListPager(Model, page => Url.Action("Index", "ManageTestExam", new { page }))
                                <span class="pageoff">Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>


    <div class="app-wrapper-footer">
        <div class="app-footer">
            <div class="app-footer__inner">

            </div>
        </div>
    </div>


</div>


<script type="text/javascript">

    $("#IDND").chosen({
        width: "100%"
    });
    $('#btn-add').click(function () {
        var url = $('#myModal').data('url');
        $.get(url, function (data) {
            $("#myModal").html(data);
            $("#ModalTitle").html("Thêm mới Đề Thi");
            $("#myModal").modal('show');
        });
    });
     $("#btn-search").on('click', function () {
        var search = $('#txtsearch').val();
        window.location.href = '@Url.Action("Index", "ManageTestExam")?search=' + search + '&IDND=' + $('#IDND').val();
    });

</script>



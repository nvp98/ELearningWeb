@model E_Learning.Models.CauHoiDeThiValidation

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm("AddQuestion", "ManageTestExam", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="modal-dialog" id="form">
        <div class="modal-content">
            <div class="modal-header">
                <h5 id="ModalTitle"></h5>
                <a href="#" class="close" data-dismiss="modal">&times;</a>
            </div>
            <div class="modal-body">


                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <fieldset id="SubmitForm">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="small mb-1">Nội dung đề thi</label>
                                @*@Html.TextBox("IDND", null, new { @class = "form-control", @readonly = "true" })*@
                                @Html.DropDownList("IDND", null, new { id = "IDND", @class = "form-control marginTB5", @style = "width:100%", @readonly = "true" })
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="small mb-1">Câu hỏi</label>
                                @Html.DropDownListFor(model => model.IDCauHoi, ViewBag.CHList as SelectList, "--- Câu Hỏi ----", new { @id = "IDCauHoi", @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.IDCauHoi, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="small mb-1">Số điểm</label>
                                @Html.EditorFor(model => model.Diem, new { htmlAttributes = new { @class = "form-control", placeholder = "Điểm số của câu", @id = "Diem" } })
                                @Html.ValidationMessageFor(model => model.Diem, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    <div class="btn-margin-top text-center">
                        <input type="submit" value="Xác nhận" id="btnSubmit" class="btn btn-primary pull-right" />

                    </div>

                </fieldset>

            </div>
        </div>
    </div>
}


<script>

    $("#IDCauHoi").chosen({
        width: "100%"
    });
    
</script>





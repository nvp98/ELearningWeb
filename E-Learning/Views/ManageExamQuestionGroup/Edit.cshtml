@model E_Learning.Models.ManageExamQuestionGroupValidation

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.IDBDeThi)
    <div class="modal-dialog" id="form">
        <div class="modal-content">
            <div class="modal-header">
                <h5 id="ModalTitle"></h5>
                <a href="#" class="close" data-dismiss="modal">&times;</a>
            </div>
            <div class="modal-body">


                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <fieldset id="SubmitForm">
                    <div class="row">

                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="small mb-1">Mã Bộ Đề Thi</label>
                                @Html.TextBox("MaBDeThi", null, new { @class = "form-control", @readonly = "true" })
                                @Html.ValidationMessageFor(model => model.MaBDeThi, "", new { @class = "text-danger" })

                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="small mb-1">Nội Dung Đào Tạo</label>
                                @Html.DropDownListFor(model => model.IDND, ViewBag.NDList as SelectList, new { @class = "form-control", @id = "IDND", @readonly = "true" })
                            </div>
                        </div>

                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="small mb-1">Tên Bộ Đề Thi</label>
                                @Html.EditorFor(model => model.TenBDeThi, new { htmlAttributes = new { @class = "form-control", placeholder = "Bộ Đề Thi", @id = "TenBDeThi" } })
                                @Html.ValidationMessageFor(model => model.TenBDeThi, "", new { @class = "text-danger" })
                            </div>
                        </div>

                    </div>

                    <div class="btn-margin-top text-center">
                        <input type="submit" value="Xác nhận" class="btn btn-success button_submit" />

                    </div>
                </fieldset>

            </div>
        </div>
    </div>
}


<script>

</script>



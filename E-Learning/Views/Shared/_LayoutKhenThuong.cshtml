        $(document).ready(function () {
            var chartData = {
                categories: ['P. CNTT & CĐS', 'P. NS', 'P. CN', 'NM. HRC1'],
                series: [
                    { name: 'Đổi mới sáng tạo', data: [3, 5, 1, 13] },
                    { name: 'Thành tích đạt được', data: [14, 8, 8, 12] },
                    { name: 'Đưa hạng mục vào hoạt động', data: [0, 2, 6, 3] }
                ]
            };

            function renderChart(filteredData) {
                Highcharts.chart('container', {
                    chart: { type: 'column' },
                    title: { text: 'Thống kê thành tích tập thể', align: 'left' },
                    xAxis: { categories: chartData.categories },
                    yAxis: {
                        min: 0,
                        title: { text: ' ' },
                        stackLabels: { enabled: true }
                    },
                    legend: {
                        align: 'center',
                        verticalAlign: 'bottom',
                        floating: false
                    },
                    tooltip: {
                        headerFormat: '<b>{category}</b><br/>',
                        pointFormat: '{series.name}: {point.y}<br/>Tổng: {point.stackTotal}'
                    },
                    plotOptions: {
                        column: { stacking: 'normal', dataLabels: { enabled: true } }
                    },
                    series: filteredData
                });
            }

            function filterData() {
                var selectedCategory = $("#categoryFilter").val();
                var selectedUnit = $("#unitFilter").val();

                var filteredSeries = chartData.series.map(series => {
                    return {
                        name: series.name,
                        data: series.data.map((value, index) => {
                            if ((selectedCategory === "all" || series.name === selectedCategory) &&
                                (selectedUnit === "all" || chartData.categories[index] === selectedUnit)) {
                                return value;
                            } else {
                                return 0;
                            }
                        })
                    };
                });

                renderChart(filteredSeries);

                const chart = Highcharts.charts.find(chart => chart && chart.renderTo.id === 'container');

                chart.series.forEach(series => {
                    series.setVisible(true, false);
                });

                if (selectedCategory === "Đổi mới sáng tạo") {
                    chart.series[1].setVisible(false, false);
                    chart.series[2].setVisible(false, false);
                } else if (selectedCategory === "Thành tích đạt được") {
                    chart.series[0].setVisible(false, false);
                    chart.series[2].setVisible(false, false);
                } else if (selectedCategory === "Đưa hạng mục vào hoạt động") {
                    chart.series[0].setVisible(false, false);
                    chart.series[1].setVisible(false, false);
                }

                chart.redraw();
            }

            // init lại chart
            renderChart(chartData.series);

            // onchange dropdown
            $("#categoryFilter, #unitFilter").on("change", filterData);
        });
    </script>

        <script>
            // Dữ liệu bảng xếp hạng
            const rankingData = [
                { name: "Nguyễn Văn A", unit: "P. CNTT & CĐS", numberOfTopic: "10" },
                { name: "Trần Thị B", unit: "P. CNTT & CĐS", numberOfTopic: "9" },
                { name: "Lê Văn C", unit: "P. CNTT & CĐS", numberOfTopic: "8" },
                { name: "Phạm Thị D", unit: "P. CNTT & CĐS", numberOfTopic: "7" },
                { name: "Hoàng Văn E", unit: "P. CNTT & CĐS", numberOfTopic: "6" },
                { name: "Vũ Thị F", unit: "P. CNTT & CĐS", numberOfTopic: "5" },
                { name: "Đặng Văn G", unit: "P. CNTT & CĐS", numberOfTopic: "4" },
                { name: "Bùi Thị H", unit: "P. CNTT & CĐS", numberOfTopic: "3" },
                { name: "Nguyễn Văn I", unit: "P. CNTT & CĐS", numberOfTopic: "2" },
                { name: "Trần Thị K", unit: "P. CNTT & CĐS", numberOfTopic: "1" },
            ];

            const itemsPerPage = 4; // Số dòng hiển thị trên mỗi trang
            let currentPage = 1; // Trang hiện tại

            // Hiển thị dữ liệu bảng xếp hạng
            function renderTable(page) {
                const start = (page - 1) * itemsPerPage;
                const end = start + itemsPerPage;
                const paginatedData = rankingData.slice(start, end);

                const tbody = document.getElementById('ranking-body');
                tbody.innerHTML = paginatedData.map((item, index) => `
                            <tr>
                                <td class="center-text-custom">${start + index + 1}</td> <!-- STT -->
                                <td>${item.name}</td>
                                <td>${item.unit}</td>
                                <td class="center-text-custom">${item.numberOfTopic}</td>
                            </tr>
                        `).join('');

            }

            // Hiển thị phân trang
            function renderPagination() {
                const totalPages = Math.ceil(rankingData.length / itemsPerPage);
                const pagination = document.getElementById('pagination');
                pagination.innerHTML = '';

                // Nút "Trang đầu"
                const firstButton = document.createElement('button');
                firstButton.innerHTML = '<i class="fa-solid fa-angles-left" style="color: #3498db;"></i>';
                firstButton.setAttribute('data-type', 'first');
                firstButton.addEventListener('click', () => goToPage(1));
                pagination.appendChild(firstButton);

                // Nút "Trang trước"
                const prevButton = document.createElement('button');
                prevButton.innerHTML = '<i class="fa-solid fa-chevron-left" style="color: #3498db;"></i>';
                prevButton.setAttribute('data-type', 'prev');
                prevButton.addEventListener('click', () => goToPage(currentPage - 1));
                pagination.appendChild(prevButton);

                // Các nút số trang
                for (let i = 1; i <= totalPages; i++) {
                    const button = document.createElement('button');
                    button.innerText = i;
                    button.setAttribute('data-type', 'page');
                    button.addEventListener('click', () => goToPage(i));
                    pagination.appendChild(button);
                }

                // Nút "Trang sau"
                const nextButton = document.createElement('button');
                nextButton.innerHTML = '<i class="fa-solid fa-chevron-right" style="color: #3498db;"></i>';
                nextButton.setAttribute('data-type', 'next');
                nextButton.addEventListener('click', () => goToPage(currentPage + 1));
                pagination.appendChild(nextButton);

                // Nút "Trang cuối"
                const lastButton = document.createElement('button');
                lastButton.innerHTML = '<i class="fa-solid fa-angles-right" style="color: #3498db;"></i>';
                lastButton.setAttribute('data-type', 'last');
                lastButton.addEventListener('click', () => goToPage(totalPages));
                pagination.appendChild(lastButton);

                updatePaginationButtons();
            }



            // Điều hướng đến trang cụ thể
            function goToPage(page) {
                const totalPages = Math.ceil(rankingData.length / itemsPerPage);
                if (page < 1 || page > totalPages) return; // Không làm gì nếu trang không hợp lệ
                currentPage = page;
                renderTable(currentPage);
                updatePaginationButtons();
            }

            // Cập nhật trạng thái active của các nút phân trang
            function updatePaginationButtons() {
                const buttons = document.querySelectorAll('#pagination button');
                const totalPages = Math.ceil(rankingData.length / itemsPerPage);

                buttons.forEach((button) => {
                    const type = button.getAttribute('data-type'); // Lấy loại nút từ data-type

                    if (type === "page") {
                        // Kiểm tra nếu là số trang
                        if (parseInt(button.innerText) === currentPage) {
                            button.classList.add('active');
                        } else {
                            button.classList.remove('active');
                        }
                    } else {
                        // Vô hiệu hóa nút "Trang đầu" và "Trang trước" nếu ở trang đầu tiên
                        if (type === "first" || type === "prev") {
                            button.disabled = currentPage === 1;
                        }

                        // Vô hiệu hóa nút "Trang sau" và "Trang cuối" nếu ở trang cuối
                        if (type === "next" || type === "last") {
                            button.disabled = currentPage === totalPages;
                        }
                    }
                });
            }


            // Khởi tạo
            renderTable(currentPage);
            renderPagination();

            // Xử lý button tuần/tháng
            function showWeekInfo() {
                document.getElementById('week-info').style.display = 'block';
                document.getElementById('month-info').style.display = 'none';
                document.querySelector('.button-group button:first-child').classList.add('active');
                document.querySelector('.button-group button:last-child').classList.remove('active');
            }

            function showMonthInfo() {
                document.getElementById('week-info').style.display = 'none';
                document.getElementById('month-info').style.display = 'block';
                document.querySelector('.button-group button:last-child').classList.add('active');
                document.querySelector('.button-group button:first-child').classList.remove('active');
            }
        </script>



    <script>
        $(document).ready(function () {
            $("#menu .underline-hover").click(function () {
                $("#menu .underline-hover").removeClass("active");
                $(this).addClass("active");
            });

            var table = $('#example').DataTable();

            function populateFilter(selectId, columnIndex) {
                var uniqueValues = [];
                table.column(columnIndex).data().each(function (value) {
                    if (uniqueValues.indexOf(value) === -1) {
                        uniqueValues.push(value);
                    }
                });
                uniqueValues.sort();
                $.each(uniqueValues, function (i, value) {
                    $(selectId).append('<option value="' + value + '">' + value + '</option>');
                });
            }

            populateFilter('#filter-unit', 2);
            populateFilter('#filter-achievement', 3);
            populateFilter('#filter-year', 6);

            $('.filter-container select').on('change', function () {
                var unit = $('#filter-unit').val();
                var achievement = $('#filter-achievement').val();
                var year = $('#filter-year').val();

                table.column(2).search(unit);
                table.column(3).search(achievement);
                table.column(6).search(year);
                table.draw();
            });

            let searchBox = $(".dt-search");
            $(".filter-container").append(searchBox);

        });

    </script>

                { name: 'Số nội dung được khen thưởng', type: 'spline', data: [49, 14, 5], yAxis: 1, visible: true }
            ];

            const chart = Highcharts.chart('container_chart', {
                chart: { zoomType: 'xy' },
                title: { text: 'Tổng hợp kết quả khen thưởng' },
                xAxis: { categories: ['Đổi mới sáng tạo', 'Thành tích đạt được', 'Thưởng đưa hạng mục vào hoạt động'] },
                yAxis: [
                    { title: { text: 'Tổng số tiền đã thưởng (VND)' } },
                    { opposite: true, title: { text: 'Số cá nhân/tập thể' } }
                ],
                series: rawSeries
            });

            // change event
            $("#filter").change(function () {
                let value = $(this).val();

                chart.series.forEach(series => {
                    series.setVisible(true, false);
                });

                if (value === "money") {
                    chart.series[1].setVisible(false, false);
                    chart.series[2].setVisible(false, false);
                    chart.series[3].setVisible(false, false);
                } else if (value === "people") {
                    chart.series[0].setVisible(false, false);
                    chart.series[3].setVisible(false, false);
                } else if (value === "content") {
                    chart.series[0].setVisible(false, false);
                    chart.series[1].setVisible(false, false);
                    chart.series[2].setVisible(false, false);
                }

                chart.redraw();
            });
        });


                                        @Html.ValidationMessageFor(model => model.IDLVDT, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group col-md-4">
                                        <label class=" mb-1 font-weight-bold">Bộ phận ban hành<span class="text-danger">(*)</span></label>

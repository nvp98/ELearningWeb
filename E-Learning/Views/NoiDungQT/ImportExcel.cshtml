                        <div class="col-md-12">
                            <label class="small mb-1" for="inputLastName">Chọn file Import</label>
                            <input style="height: 41px;" type="file" id="FileUpload" name="FileUpload" class="form-control" onchange="checkfile(this);" />
                        </div>
                    </div>
                    &nbsp;

                    <div class="form-group">
                        <a href="@Url.Action("DownloadExcel", "NoiDungQT")"> <i class="fa fa-download" aria-hidden="true"></i> Tải biểu mẫu import </a>
                        <input type="submit" value="Import" id="btnSubmit" class="btn btn-primary pull-right" />
                    </div>
                </fieldset>

            </div>
        </div>
    </div>
}
<script type="text/javascript">
    function checkfile(sender) {
        var validExts = new Array(".xlsx", ".xls");
        var fileExt = sender.value;
        fileExt = fileExt.substring(fileExt.lastIndexOf('.'));
        if (validExts.indexOf(fileExt) < 0) {
            alert("Vui lòng chọn file Excel: " +
                validExts.toString() + "");
            $('#FileUpload').val() = '';
            return false;
        }
        else { return true; }
    };


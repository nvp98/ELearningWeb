@model E_Learning.ModelsQLKhenThuong.NoiDungKhenThuongDTO
@*<script src="~/Content/assets/Chonse/chosen.jquery.js"></script>
    <link href="~/Content/assets/Chonse/chosen.css" rel="stylesheet" />*@
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm("Create", "RewardContent", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="modal-dialog" style="max-width:800px" id="formF">
        <div class="modal-content">
            <div class="modal-header">
                <h5 id="ModalTitle"></h5>
                <a href="#" class="close" data-dismiss="modal">&times;</a>
            </div>
            <div class="modal-body">


                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <fieldset id="SubmitForm">
                    <div class="row">
                        <div class="form-group col-md-8 " style="display:grid">
                            <label class="mb-1">Nội dung khen thưởng</label>
                            @Html.TextAreaFor(model => model.NoiDungKhenThuong, new { @class = "form-control", @rows = 1, placeholder = "Nội dung khen thưởng", @id = "NDKT", })
                            @Html.ValidationMessageFor(model => model.NoiDungKhenThuong, "", new { @class = "text-danger" })
                        </div>
                        @*<div class="form-group col-md-4 " style="display:grid">
                            <label class="mb-1">Số quyết định</label>
                            @Html.TextAreaFor(model => model.SoQuyetDinh, new { @class = "form-control", @rows = 1, placeholder = "Số quyết định", @id = "SoQD", })
                            @Html.ValidationMessageFor(model => model.SoQuyetDinh, "", new { @class = "text-danger" })
                        </div>*@
                        <div class="form-group col-md-4">
                            <label class="mb-1">Số tiền khen thưởng</label>
                            <div class="input-group">
                                @Html.TextBoxFor(model => model.TongTienThuong, new
                                {
                                    @class = "form-control",
                                    placeholder = "Nhập số tiền thưởng",
                                    id = "GiaTriThuong",
                                    type = "number",
                                    min = "0"
                                })

                            </div>
                            @Html.ValidationMessageFor(model => model.GiaTriLamLoi, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group col-md-4">
                            <label class="mb-1">Giá trị làm lợi</label>
                            <div class="input-group">
                                @Html.TextBoxFor(model => model.GiaTriLamLoi, new
                                {
                                    @class = "form-control",
                                    placeholder = "Nhập giá trị làm lợi",
                                    id = "GiaTriLamLoi",
                                    type = "number",
                                    min = "0"
                                })

                            </div>
                            @Html.ValidationMessageFor(model => model.GiaTriLamLoi, "", new { @class = "text-danger" })
                        </div>
                        @*<div class="form-group col-md-4 " style="display:grid">
                            <label class="mb-1">Loại thưởng</label>
                            @Html.DropDownListFor(model => model.IDLoaiKhenThuong, (SelectList)ViewBag.LoaiThuong, "-- Chọn loại thưởng --", new { @class = "form-control" })
                        </div>*@
                        <div class="form-group col-md-4" style="display: grid">
                            <label class="mb-1">Ngày quyết định</label>
                            @Html.TextBoxFor(model => model.NgayQuyetDinh, new { @class = "form-control", type = "date" })
                        </div>
                        <div class="form-group col-md-4" style="display: grid">
                            <label class="mb-1">Chọn ảnh banner</label>
                            <input type="file" name="BannerUpload" class="form-control" />
                        </div>
                        <div id="list_vt" style="width:100%">
                        </div>
                    </div>

                    <div class="btn-margin-top text-center">
                        <input type="submit" value="Xác nhận" class="btn btn-primary pull-right " />
                        <input type="reset" value="Hủy" class="btn btn-danger pull-right button_cancel mr-1" data-dismiss="modal" />
                    </div>
                </fieldset>

            </div>
        </div>
    </div>

}

<script>
    $("#formF #IDPB").chosen({
        width: "100%"
    });
    $(document).ready(function () {
        var i = 2;
        $("#add-vt").click(function () {
            var renderList = $(`<div class='form-group col-md-8' style='display: grid'>  <textarea class='form-control' placeholder='Tên vị trí ${i}' rows='1' name='TenVTKNL_${i}+' id='TenVTKNL_${i}'></textarea></div>
                        <div class='form-group col-md-4' style='display: grid'>  <textarea class='form-control' placeholder='Mã vị trí ${i}' rows='1' name='MaViTri_${i}' id='MaViTri_${i}'></textarea></div>
    `);
            $("#list_vt").before(renderList);
            i++;
        });
    });
</script>





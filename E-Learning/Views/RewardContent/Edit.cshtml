
@model E_Learning.ModelsQLKhenThuong.KhenThuongDTO
@*<script src="~/Content/assets/Chonse/chosen.jquery.js"></script>
    <link href="~/Content/assets/Chonse/chosen.css" rel="stylesheet" />*@
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="modal-dialog text-left" style="max-width:800px" id="formE">
        <div class="modal-content">
            <div class="modal-header">
                <h5 id="ModalTitle"></h5>
                <a href="#" class="close" data-dismiss="modal">&times;</a>
            </div>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.ID)
            <div class="modal-body">

                <fieldset id="SubmitForm">
                    <div class="row">
                        <div class="form-group col-md-8 " style="display:grid">
                            <label class="mb-1">Nội dung khen thưởng</label>
                            @Html.TextAreaFor(model => model.NoiDungKhenThuong, new { @class = "form-control", @rows = 1, placeholder = "Nội dung khen thưởng", @id = "NDKT", })
                            @Html.ValidationMessageFor(model => model.NoiDungKhenThuong, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group col-md-4 " style="display:grid">
                            <label class="mb-1">Số quyết định</label>
                            @Html.TextAreaFor(model => model.SoQuyetDinh, new { @class = "form-control", @rows = 1, placeholder = "Số quyết định", @id = "SoQD", })
                            @Html.ValidationMessageFor(model => model.SoQuyetDinh, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group col-md-4 " style="display:grid">
                            <label class="mb-1">Loại thưởng</label>
                            @Html.DropDownListFor(model => model.IDLoaiKhenThuong, (SelectList)ViewBag.LoaiThuong, "-- Chọn loại thưởng --", new { @class = "form-control" })
                        </div>
                        <div class="form-group col-md-4" style="display: grid">
                            <label class="mb-1">Ngày quyết định</label>
                            @Html.TextBoxFor(model => model.NgayQuyetDinh, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })

                        </div>


                    </div>
                    &nbsp;
                    <div class="btn-margin-top text-center">
                        <input type="submit" value="Xác nhận" class="btn btn-success button_submit" />
                        <input type="reset" value="Hủy" class="btn btn-danger button_cancel" data-dismiss="modal" />
                    </div>
                </fieldset>

            </div>


        </div>
    </div>
}
<style>
    .button_submit {
        float: right;
        margin-bottom: 15px;
    }

    .button_cancel {
        float: right;
        margin-right: 15px
    }

    .margin-checkbox {
        margin-right: 30px;
    }
</style>


<script>
    $("#formE #IDPB").chosen({
        width: "100%"
    });
</script>








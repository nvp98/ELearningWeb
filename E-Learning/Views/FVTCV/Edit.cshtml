
@model E_Learning.ModelsQTTC.VTCVValidation
@*<script src="~/Content/assets/Chonse/chosen.jquery.js"></script>
    <link href="~/Content/assets/Chonse/chosen.css" rel="stylesheet" />*@
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="modal-dialog text-left" style="max-width:800px" id="formE">
        <div class="modal-content">
            <div class="modal-header">
                <h5 id="ModalTitle"></h5>
                <a href="#" class="close" data-dismiss="modal">&times;</a>
            </div>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.IDVTCV)
            <div class="modal-body">

                <fieldset id="SubmitForm">
                    <div class="row">

                        <div class="form-group col-md-4" style="display:grid">
                            <label class="">Tên ĐVTC</label>
                            @Html.TextAreaFor(model => model.TenVTCV, new { @class = "form-control", @rows = 1, placeholder = "Tên ĐVTC", @id = "TenDVTC", })
                            @Html.ValidationMessageFor(model => model.TenVTCV, "", new { @class = "text-danger" })

                        </div>
                        <div class="form-group col-md-4 " style="display:grid">
                            <label class="">Mã ĐVTC</label>
                            @Html.TextAreaFor(model => model.MaVTCV, new { @class = "form-control", @rows = 1, placeholder = "Mã ĐVTC", @id = "MaDVTC", })
                            @Html.ValidationMessageFor(model => model.MaVTCV, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group col-md-3 " style="display:grid">
                            <label class="mb-1">Cấp quản lý</label>
                            @Html.DropDownListFor(model => model.CapQuanLy, new List<SelectListItem>
                            {
                                new SelectListItem { Text = "TĐV", Value = "TĐV" },
                                new SelectListItem { Text = "PĐV", Value = "PĐV" }
                            }, new { @class = "form-control" })
                        </div>

                    </div>
                    &nbsp;
                    <div class="btn-margin-top text-center">
                        <input type="submit" value="Xác nhận" class="btn btn-success button_submit" />
                        <input type="reset" value="Hủy" class="btn btn-danger button_cancel" data-dismiss="modal" />
                    </div>
                </fieldset>

            </div>


        </div>
    </div>
}
<style>
    .button_submit {
        float: right;
        margin-bottom: 15px;
    }

    .button_cancel {
        float: right;
        margin-right: 15px
    }

    .margin-checkbox {
        margin-right: 30px;
    }
</style>



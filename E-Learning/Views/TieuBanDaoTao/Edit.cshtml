
@model E_Learning.ModelsTieuBanDaoTao.ThanhVienTieuBanInfo
@*<script src="~/Content/assets/Chonse/chosen.jquery.js"></script>
    <link href="~/Content/assets/Chonse/chosen.css" rel="stylesheet" />*@
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>



@using (Html.BeginForm("Edit", "TieubanDaoTao", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="modal-dialog text-left" style="max-width:800px" id="formE">
        <div class="modal-content">
            <div class="modal-header">
                <h5 id="ModalTitle_Edit" class="ModalTitle_Edit"></h5>
                <a href="#" class="close" data-dismiss="modal">&times;</a>
            </div>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)
            <div class="modal-body">

                <fieldset id="SubmitForm">
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label for="BoPhan">Bộ phận</label>
                            <input type="text" class="form-control" id="BoPhan" value="@ViewBag.TenBoPhan" disabled />
                        </div>
                    </div>

                    <div class="row mt-3 thanhVienRow">
                        <div class="form-group col-md-4">
                            <label>Thành viên</label>
                            <input type="text" class="form-control" id="BoPhan" value="@ViewBag.NhanVienDangChon" disabled />
                        </div>
                        <div class="form-group col-md-4">
                            <label>Vị trí trong tiểu ban</label>
                            @Html.DropDownListFor(model => model.ViTriTieuBan_ID, (SelectList)ViewBag.DSViTriTieuBan, "--Chọn vị trí--", new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="mt-3">
                        <button type="submit" class="btn btn-success" id="btnXacNhan">Xác nhận</button>
                        <input type="reset" value="Hủy" class="btn btn-danger button_cancel" data-dismiss="modal" />
                    </div>
                </fieldset>


            </div>
        </div>
    </div>
}
<style>
    .button_submit {
        float: right;
        margin-bottom: 15px;
    }

    .button_cancel {
        margin-right: 15px
    }

    .margin-checkbox {
        margin-right: 30px;
    }
</style>









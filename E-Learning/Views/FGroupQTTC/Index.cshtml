
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using E_Learning.Models
@model PagedList.IPagedList<DVTCValidation>
@using PagedList.Mvc

<link href="~/Content/assets/css/PagedList.css" rel="stylesheet" />
<script src="~/Content/assets/Chonse/chosen.jquery.js"></script>
<link href="~/Content/assets/Chonse/chosen.css" rel="stylesheet" />

@if (TempData["msgSuccess"] != null)
{
    @Html.Raw(TempData["msgSuccess"])
}
@if (TempData["msgError"] != null)
{
    @Html.Raw(TempData["msgError"])
}

<style type="text/css">
    a:hover {
        cursor: pointer;
    }
</style>

<div class="app-main__outer">
    <div class="app-main__inner">

        <div class="app-page-title">
            <div class="page-title-wrapper">
                <div class="page-title-heading">
                    <div class="page-title-icon">
                        <i class="pe-7s-id icon-gradient bg-grow-early">
                        </i>
                    </div>
                    <div>
                        C7: Đội
                        <div class="page-title-subheading">
                        </div>
                    </div>
                </div>

            </div>
        </div>



        <div class="card mb-4">
            <div class="card-header">

                <div class="col-md-9">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="row">
                                @Html.DropDownList("IDDVTC", null, "--ĐVTC--", new { id = "IDDVTC", @class = "form-control marginTB5", @style = "width:100%", })
                            </div>

                        </div>

                        <div class="col-md-2">
                            <div class="input-group-btn"><button class="btn btn-primary marginTB5" id="btn-search"><i class="fa fa-search"></i> Tìm kiếm</button></div>
                        </div>

                    </div>

                </div>
                @*<div class="clo-md-3 m-l-auto">
            <a class="btn btn-primary" title="Chi tiết" href="@Url.Action("CreateVTKNL", "ViTriKNL")">
                <i class="fa fa-plus">&nbsp;</i>&nbsp;Danh sách mã vị trí
            </a>
        </div>*@
                @if ((ViewBag.QUYENCN as List<String>).Contains(CONSTKEY.ADD))
                {
                    <div class="clo-md-6 m-l-auto d-flex gap-2">
                        <button type="button" id="btn-add" class="btn btn-primary">
                            <i class="fa fa-plus">&nbsp;</i>&nbsp;Thêm mới
                        </button>
                        <div class="modal fade" id="myModal" role="dialog" data-url='@Url.Action("Create","FGroupQTTC")'></div>
                        &nbsp;
                        <button type="button" class="btn btn-success" id="btnImportExcel">
                            Import Excel
                        </button>
                        <form id="formUpload" enctype="multipart/form-data">
                            <input type="file" id="fileExcel" name="FileExcel" class="d-none" />
                        </form>
                    </div>
                }

            </div>
            
            <div class="card-body">
                <div class="table-responsive">

                    <table class="table table-bordered table-hover" id="table" width="100%" cellpadding="0">
                        <thead class="thead-light">
                            <tr>
                                <th class="text-center" width="30px">STT</th>
                                <th class="text-center">Mã ĐVTC</th>
                                <th class="text-center">Tên ĐVTC</th>
                                <th class="text-center">Trạng thái</th>

                                <th class="text-center">Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int pageno = (int)Model.PageNumber;
                                int itemperpage = (int)Model.PageSize;
                                int RowNo = ((pageno - 1) * itemperpage) + 1;
                            }
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="text-center"> @RowNo@{RowNo++;}</td>
                                    <td class="">@item.MaDVTC</td>
                                    <td class="">@item.TenDVTC</td>
                                    <td class="">@(item.TrangThai.Equals(1) ? "Trong định biên" : "Không tồn tại")</td>

                                    <td class="text-center">
                                        @if ((ViewBag.QUYENCN as List<String>).Contains(CONSTKEY.DEL))
                                        {
                                            <a class="fa fa-trash icon_action" title="Xóa" href="@Url.Action("Delete", "FGroupQTTC", new { id = item.IDDVTC })"
                                               onclick="return confirm('Bạn muốn xóa : @item.TenDVTC')">
                                            </a>
                                        }
                                        @if ((ViewBag.QUYENCN as List<String>).Contains(CONSTKEY.EDIT))
                                        {
                                            <a id="btn-edit_@item.IDDVTC" title="Sửa" class="fa fa-edit icon_action "></a>
                                            <div class=" modal fade" id="myModale_@item.IDDVTC" role="dialog" data-url='@Url.Action("Edit","FGroupQTTC", new { id = item.IDDVTC })'></div>
                                            <script type="text/javascript">
                                            $("#btn-edit_@item.IDDVTC").click(function () {
                                                var url = $('#myModale_@item.IDDVTC').data('url');
                                                        $.get(url, function (data) {
                                                            $("#myModale_@item.IDDVTC").html(data);
                                                            $("#ModalTitle").html("Cập nhật Vị trí");
                                                            $("#myModale_@item.IDDVTC").modal('show');
                                                        });
                                                    });
                                            </script>
                                        }

                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <div class="pager">
                        @Html.PagedListPager(Model, page => Url.Action("Index", "FGroupQTTC",
                            new { page, IDDVTC = Request.QueryString["IDDVTC"], search = ViewBag.search }))

                        <span class="pageoff">
                            Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
                        </span>
                    </div>
                </div>

            </div>
        </div>



    </div>


    <div class="app-wrapper-footer">
        <div class="app-footer">
            <div class="app-footer__inner">
            </div>
        </div>
    </div>


</div>


<script src="~/Content/Chonse/chosen.jquery.js"></script>
<script type="text/javascript">
    $('#btn-add').click(function () {
        // alert('sdsjdn')
        var url = $('#myModal').data('url');
        $.get(url, function (data) {
            $("#myModal").html(data);
            $("#ModalTitle").html("Thêm mới ĐVTC");
            $("#myModal").modal('show');
        });
    });

    $('#btn-add-vt').click(function () {
        var url = $('#myModalVT').data('url');
        $.get(url, function (data) {
            $("#myModal").html(data);
            $("#ModalTitle").html("Danh sách ĐVTC");
            $("#myModal").modal('show');
        });
    });

    // Open file dialog
    $("#btnImportExcel").click(function () {
        $("#fileExcel").click();
    });

    // Send file to server
    $("#fileExcel").change(function () {
        var file = $("#fileExcel")[0].files[0]; // Lấy file từ input
        var formData = new FormData();
        formData.append("FileExcel", file); // Thêm file vào FormData

        $.ajax({
            url: "/FGroupQTTC/ImportExcel",
            type: "POST",
            data: formData,
            contentType: false,
            processData: false,
            success: function (response) {
                alert(response.message);
                window.location.href = '@Url.Action("Index", "FGroupQTTC")';
            },
            error: function () {
                alert("Lỗi khi upload file!");
            }
        });
    });

    $("#IDDVTC").chosen({
        width: "100%"
    });
    $("#btn-search").on('click', function () {
        window.location.href = '@Url.Action("Index", "FGroupQTTC")?IDDVTC=' + $('#IDDVTC').val();
    });
</script>


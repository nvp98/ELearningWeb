            </div>
        </div>

        <div class="tab-content">
            <div class="row">
                <div class="col-lg-12">
                    <div class="container">
                        <div class="row justify-content-center">
                            <div class="col-lg-5">

                                <div class="card">
                                    <div class="card-header">
                                        <img src="~/Content/assets/images/logo-inverse.png" style="width:100%; height:auto; max-width:230px; margin: 0 auto;" />
                                    </div>
                                    <div class="card-body">
                                        <p class="text-center font-weight-light" style="text-transform: uppercase; font-weight: bold !important;">Cập nhật chữ ký</p>
                                        @using (Html.BeginForm("CapNhatChuKy", "Login", FormMethod.Post, new { enctype = "multipart/form-data", id = "myFormId" }))
                                        {
                                            @Html.AntiForgeryToken()


                                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                            @Html.HiddenFor(m => m.IDNV)
                                            if (Model.ChuKy != null)
                                            {
                                                <div class="form-group text-center">
                                                    @*<label class="mb-1 font-weight-bold">Chữ ký<span class="text-danger">(*)</span></label>*@
                                                    <img src="@Url.Content(Model.ChuKy)" style="width:100%; height:auto; max-width:230px; margin: 0 auto;" />
                                                </div>
                                            }



                                            <div class="form-group">
                                                <label class="mb-1 font-weight-bold">Cập nhật chữ ký<span class="text-danger">(*)</span></label>
                                                @Html.TextBoxFor(model => model.FileChuKy, new { @class = "form-control ", @rows = 1, placeholder = "", type = "file", @id = "FileChuKy", })
                                                @Html.ValidationMessageFor(model => model.FileChuKy, "", new { @class = "text-danger" })
                                            </div>

                                            <div class="form-group">
                                                <button type="submit" class="form-control btn btn-primary submit px-3"><strong>Cập nhật</strong></button>
                                            </div>


                                        }
                                        @if (@ViewBag.Message != null)
                                        {
                                            @Html.Raw(ViewBag.Message)
                                        }
                                    </div>
                                </div>


                            </div>
                        </div>
                    </div>
                </div>


            </div>
        </div>
    </div>
    <div class="app-wrapper-footer">
        <div class="app-footer">
            <div class="app-footer__inner">

            </div>
        </div>
    </div>
</div>




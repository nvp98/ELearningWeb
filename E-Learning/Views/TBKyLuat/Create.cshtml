@model E_Learning.Models.TBKyLuatValidation
@*<script src="~/Content/assets/Chonse/chosen.jquery.js"></script>
    <link href="~/Content/assets/Chonse/chosen.css" rel="stylesheet" />*@
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm("Create", "TBKyLuat", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="modal-dialog" id="formF">
        <div class="modal-content">
            <div class="modal-header">
                <h5 id="ModalTitle"></h5>
                <a href="#" class="close" data-dismiss="modal">&times;</a>
            </div>
            <div class="modal-body">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <fieldset id="SubmitForm">
                    <div class="row">
                        <div class="form-group col-md-12 " style="display:grid">
                            <label class="mb-1">Tiêu đề thông báo</label>
                            @Html.TextAreaFor(model => model.TB_TieuDe, new { @class = "form-control", @rows = 3, placeholder = "Tiêu đề thông báo", @id = "TB_TieuDe", })
                            @Html.ValidationMessageFor(model => model.TB_TieuDe, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group col-md-6 " style="display:grid">
                            <label class="mb-1">Tháng</label>
                            @Html.TextBoxFor(model => model.TB_Thang, new { @class = "form-control", @rows = 1, placeholder = "Tháng thông báo", @id = "TB_Thang", @type = "number" })
                            @Html.ValidationMessageFor(model => model.TB_Thang, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group col-md-6 " style="display:grid">
                            <label class="mb-1">Năm</label>
                            @Html.TextBoxFor(model => model.TB_Nam, new { @class = "form-control", @rows = 1, placeholder = "Năm thông báo", @id = "TB_Năm", @type = "number" })
                            @Html.ValidationMessageFor(model => model.TB_Nam, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group col-md-12 " style="display:grid">
                            <label class="mb-1 font-weight-bold">File hướng dẫn</label>
                            @Html.EditorFor(model => model.TB_File, new { htmlAttributes = new { @class = "form-control", placeholder = "", @id = "TB_File", @readonly = "true" } })
                            <div class="">
                                <input type="file" name="FileUpload" />
                            </div>
                        </div>

                    </div>

                    <div class="btn-margin-top text-center">
                        <input type="submit" value="Xác nhận" class="btn btn-primary pull-right " />
                        <input type="reset" value="Hủy" class="btn btn-danger pull-right button_cancel mr-1" data-dismiss="modal" />
                    </div>
                </fieldset>

            </div>
        </div>
    </div>

}


<script>
</script>





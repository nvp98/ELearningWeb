@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model E_Learning.ModelsDMST.DeXuatDMSTView

<link href="~/Content/assets/css/PagedList.css" rel="stylesheet" />
<link href="~/Content/assets/css/PagedList.css" rel="stylesheet" />
<script src="~/Content/assets/Chonse/chosen.jquery.js"></script>
<link href="~/Content/assets/Chonse/chosen.css" rel="stylesheet" />
<link href="~/Content/PagedList.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<style>
    .noti,
    .btnnoti {
        display: none;
    }

    a {
        text-decoration: none;
    }
</style>
@if (TempData["msgSuccess"] != null)
{
    @Html.Raw(TempData["msgSuccess"])
}
@if (TempData["msgError"] != null)
{
    @Html.Raw(TempData["msgError"])
}

<div class="app-main__outer">
    <div class="app-main__inner">
        <div class="tab-content">
            <div class="row">
                <div class="card w-100">
                    <div class="d-flex justify-content-between align-items-center mt-3 px-3">
                        <h3 class="text-center flex-grow-1">
                            <b>CHUYÊN TRANG ĐỔI MỚI SÁNG TẠO</b>
                        </h3>
                        <button class="btn btn-primary ms-3">Lưu</button>
                    </div>

                    <div class="card-body" style="padding-top:8px">
                        <ul class="nav nav-tabs mb-3" id="innovationTab" role="tablist">
                            <li class="nav-item"><a class="nav-link active" data-bs-toggle="tab" href="#tab1">Đăng ký ý tưởng</a></li>
                            <li class="nav-item"><a class="nav-link" data-bs-toggle="tab" href="#tab2">Trình ký</a></li>
                            <li class="nav-item"><a class="nav-link" data-bs-toggle="tab" href="#tab3">Chuẩn bị thực hiện</a></li>
                            <li class="nav-item"><a class="nav-link" data-bs-toggle="tab" href="#tab4">Triển khai thực hiện</a></li>
                            <li class="nav-item"><a class="nav-link" data-bs-toggle="tab" href="#tab5">Bàn giao đưa vào sử dụng</a></li>
                            <li class="nav-item"><a class="nav-link" data-bs-toggle="tab" href="#tab6">Đề nghị công nhận</a></li>
                        </ul>

                        <div class="tab-content">

                            <div class="tab-pane fade show active" id="tab1">
                                <div class="mb-3">
                                    <label class="form-label">Tên ý tưởng</label>
                                    <input type="text" class="form-control" placeholder="Nhập tên ý tưởng">
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Lĩnh vực</label>
                                    <select class="form-select">
                                        <option>Chọn lĩnh vực</option>
                                        <option>Công nghệ</option>
                                        <option>Quản lý</option>
                                        <option>Sản xuất</option>
                                    </select>
                                </div>
                                <div class="mb-3 form-check">
                                    <input type="checkbox" class="form-check-input" id="cb1">
                                    <label class="form-check-label" for="cb1">Ý tưởng mang tính khả thi</label>
                                </div>
                                <button class="btn btn-primary">Lưu</button>
                            </div>

                            <div class="tab-pane fade" id="tab2">
                                <div class="mb-3">
                                    <label class="form-label">Người ký duyệt</label>
                                    <input type="text" class="form-control" placeholder="Nhập tên người ký">
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Ngày ký</label>
                                    <input type="date" class="form-control">
                                </div>
                                <button class="btn btn-success">Trình ký</button>
                            </div>

                            <div class="tab-pane fade" id="tab3">
                                <div class="mb-3">
                                    <label class="form-label">Kế hoạch triển khai</label>
                                    <textarea class="form-control" rows="3" placeholder="Mô tả kế hoạch"></textarea>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Loại nguồn lực</label><br>
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" name="nguonluc" id="human" value="human">
                                        <label class="form-check-label" for="human">Nhân lực</label>
                                    </div>
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" name="nguonluc" id="taiChinh" value="finance">
                                        <label class="form-check-label" for="taiChinh">Tài chính</label>
                                    </div>
                                </div>
                                <button class="btn btn-secondary">Lưu kế hoạch</button>
                            </div>

                            <div class="tab-pane fade" id="tab4">
                                <div class="mb-3">
                                    <label class="form-label">Tiến độ thực hiện</label>
                                    <input type="text" class="form-control" placeholder="Ví dụ: Đang thực hiện 50%">
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Người phụ trách</label>
                                    <input type="text" class="form-control" placeholder="Tên người phụ trách">
                                </div>
                                <button class="btn btn-warning">Cập nhật tiến độ</button>
                            </div>

                            <div class="tab-pane fade" id="tab5">
                                <div class="mb-3">
                                    <label class="form-label">Ngày bàn giao</label>
                                    <input type="date" class="form-control">
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Trạng thái sử dụng</label>
                                    <select class="form-select">
                                        <option>Đang sử dụng</option>
                                        <option>Đang thử nghiệm</option>
                                        <option>Tạm dừng</option>
                                    </select>
                                </div>
                                <button class="btn btn-info">Xác nhận bàn giao</button>
                            </div>

                            <div class="tab-pane fade" id="tab6">
                                <div class="mb-3">
                                    <label class="form-label">Đề xuất công nhận</label>
                                    <textarea class="form-control" rows="3" placeholder="Mô tả thành quả"></textarea>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Mức độ hoàn thành</label>
                                    <select class="form-select">
                                        <option>Xuất sắc</option>
                                        <option>Đạt yêu cầu</option>
                                        <option>Không đạt</option>
                                    </select>
                                </div>
                                <button class="btn btn-dark">Gửi đề nghị</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>








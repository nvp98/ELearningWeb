<script src="~/Content/assets/TinyMCE/tinimceConfig.js"></script>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="modal-dialog" id="formE">
        <div class="modal-content">
            <div class="modal-header">
                <h5 id="ModalTitle"></h5>
                <a href="#" class="close" data-dismiss="modal">&times;</a>
            </div>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.IDCH)
            <div class="modal-body">

                <fieldset id="SubmitForm">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="small mb-1">Nội Dung Câu Hỏi</label>
                                @Html.TextAreaFor(model => model.NoiDungCH, new { @class = "form-control myTextarea", @rows = "2", placeholder = "Nội Dung Câu Hỏi", @id = "NoiDungCH" })
                                @Html.ValidationMessageFor(model => model.NoiDungCH, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="small mb-1">Đáp Án A</label>
                                @Html.EditorFor(model => model.DapAnA, new { htmlAttributes = new { @class = "form-control", placeholder = "Đáp Án A", @id = "DapAnA" } })
                                @Html.ValidationMessageFor(model => model.DapAnA, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="small mb-1">Đáp Án B</label>
                                @Html.EditorFor(model => model.DapAnB, new { htmlAttributes = new { @class = "form-control", placeholder = "Đáp Án B", @id = "DapAnB" } })
                                @Html.ValidationMessageFor(model => model.DapAnB, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="small mb-1">Đáp Án C</label>
                                @Html.EditorFor(model => model.DapAnC, new { htmlAttributes = new { @class = "form-control", placeholder = "Đáp Án C", @id = "DapAnC" } })
                                @Html.ValidationMessageFor(model => model.DapAnC, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="small mb-1">Đáp Án D</label>
                                @Html.EditorFor(model => model.DapAnD, new { htmlAttributes = new { @class = "form-control", placeholder = "Đáp Án D", @id = "DapAnD" } })
                                @Html.ValidationMessageFor(model => model.DapAnD, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="small mb-1">Đáp Án Đúng</label>
                                @Html.DropDownList("IDDAĐung", null, new { @id = "IDDSĐA", @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.IDDAĐung, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group col-md-12">
                            <label class="small mb-1">Nội dung Đào tạo</label>
                            @Html.DropDownList("IDND", null, "--Chọn Nội Dung--", new { id = "IDND", @class = "form-control marginTB5", @style = "width:100%", })
                        </div>



                    </div>
                    &nbsp;
                    <div class="btn-margin-top text-center">
                        <input type="submit" value="Xác nhận" class="btn btn-success button_submit" />
                        <input type="reset" value="Hủy" class="btn btn-danger button_cancel" data-dismiss="modal" />
                    </div>
                </fieldset>

            </div>


        </div>
    </div>
}
<style>
    .button_submit {
        float: right;
        margin-bottom: 15px;
    }

    .button_cancel {
        float: right;
        margin-right: 15px
    }

    .margin-checkbox {
        margin-right: 30px;
    }
</style>


<script>
    $("#formE #IDND").chosen({
        width: "100%"
    });
</script>







